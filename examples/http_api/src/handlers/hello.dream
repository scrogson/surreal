// Handler for GET /api/hello

pub fn init(req: Any, state: Any) -> (Atom, Any, Any) {
    let headers = {
        "content-type": "application/json"
    };

    let json = serde_json::to_string_value({
        message: "Hello from Dream!"
    });

    let req = cowboy_req::reply(200, headers, json, req);

    (:ok, req, state)
}
